extends ../layouts/page_layout/page.pug

block variables
    - const title = 'exFinance CRM system - Категории';
    - const language = 'ru';

block metaInfo

block content
  .app-main-layout.app-main-categories
    nav.navigation.app-navigation
      .navigation__select
        #language.select
      button.button-logout(data-logout data-position="left" data-tooltip="Выход")
        svg.button-logout__icon
          use(xlink:href="../../img/svg/sprite/sprite.svg#logout")
    include ../sections/_sidebar.pug
    main.app-content.left.right
      .container
        .app-page
          .app-page__top
            h3.app-page__title Категории
          .row
            .col-12.col-md-6.app-page__col-content
              h4.categories-subtitle Создать
              .create-category-form
                .input-field
                  +inputFiled("text", "Название категории")(placeholder="Название")
                  span.helper-text Это поле является обязательным
                .input-field
                  +inputFiled("number", "Лимит")(placeholder="Введите сумму" min="100")
                  span.helper-text Это поле является обязательным
                .input-field
                  input.button.button--primary(type="submit" value="Создать")
            .col-12.col-md-6
              h4.categories-subtitle Редактировать
              .create-category-form
                .input-field
                  #select.select
                .input-field
                  +inputFiled("text", "Название категории")(placeholder="Название")
                  span.helper-text Это поле является обязательным
                .input-field
                  +inputFiled("number", "Лимит")(placeholder="Введите сумму" min="100")
                  span.helper-text Это поле является обязательным
                .input-field
                  input.button.button--primary(type="submit" value="Обновить")
      +buttonAdd()(data-poisition="top", data-tooltip="Добавить запись")
block scripts
  script(src="../../js/index.js")